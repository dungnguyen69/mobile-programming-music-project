<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#111313"
    android:id="@+id/custom_music_item">


    <ImageView
        android:id="@+id/img_song_item"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginStart="16dp"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@+id/img_song_item"
        android:layout_toStartOf="@+id/img_more_item"
        android:orientation="vertical"
        android:id="@+id/infor_layout">

        <TextView
            android:id="@+id/tv_titleSong_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_singleSong_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/gray"
            android:textSize="14sp" />
    </LinearLayout>


    <ImageView
        android:id="@+id/img_more_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="16dp"
        app:srcCompat="@drawable/outline_more_vert_white_24"
        android:layout_centerVertical="true"/>

</RelativeLayout>